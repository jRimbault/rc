[include]
	path = ~/.gitconfig_local
[core]
	excludesfile = ~/.config/git/ignore
	fileMode = true
[alias]
	# depends on the 'legit' package
	switch = !legit switch
	sync = !legit sync
	publish = !legit publish
	unpublish = !legit unpublish
	undo = !legit undo
	branches = !legit branches

	# Pretty printing
	# logging
	l = log-pretty
	# list branches with their last commit
	b = branch-pretty

	# less pretty but for Windows
	log-oneline = log --graph --all --pretty='%Cred%h%Creset %Cgreen%cr %Cblue%an%Creset %s%C(yellow)%d%Creset'
	bw = branch -v --color=always --sort=-committerdate
