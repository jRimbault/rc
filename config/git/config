[user]
	email = jacques.rimbault@gmail.com
	name = jRimbault
[core]
	excludesfile = ~/.config/git/ignore
[alias]
	# depends on the 'legit' package
	switch = !legit switch
	sync = !legit sync
	publish = !legit publish
	unpublish = !legit unpublish
	undo = !legit undo
	branches = !legit branches

	# logging
	tree = "!. ~/.config/git/helper.sh && pretty_git_log"
	# less pretty but for Windows
	treew = log --graph --all --pretty='%Cred%h%Creset %Cgreen%cr %Cblue%an%Creset %s%C(yellow)%d%Creset'
