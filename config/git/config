[user]
	email = jacques.rimbault@gmail.com
	name = jRimbault
[core]
	excludesfile = ~/.config/git/ignore
	fileMode = true
[alias]
	# depends on the 'legit' package
	switch = !legit switch
	sync = !legit sync
	publish = !legit publish
	unpublish = !legit unpublish
	undo = !legit undo
	branches = !legit branches

	# logging
	l = "!. ~/.config/git/helper.sh && pretty_git_log"
	# less pretty but for Windows
	lw = log --graph --all --pretty='%Cred%h%Creset %Cgreen%cr %Cblue%an%Creset %s%C(yellow)%d%Creset'

	# list branches with their last commit, without paging
	b = "!. ~/.config/git/helper.sh && pretty_git_branch"
	# same, sorted
	bs = "!. ~/.config/git/helper.sh && pretty_git_branch_sorted"
	# Windows
	bw = branch -v --color=always --sort=-committerdate
	authors = !git log --format='%an <%ae>' | sort -u
