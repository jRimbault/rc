[include]
    path = ~/.gitconfig_local
[core]
    excludesfile = ~/.config/git/ignore
    fileMode = true
[alias]
    ## Pretty printing (call custom scripts)
    # logging
    l = log-pretty
    # list branches with their last commit
    b = branch-pretty

    ## Only git (no hidden deps)
    graph = log --graph --stat --decorate --all
    log-oneline = log --graph --all --pretty='%Cred%h%Creset %Cgreen%cr %Cblue%an%Creset %s%C(yellow)%d%Creset'
    branches-sorted = branch -v --color=always --sort=-committerdate
    diff-last = diff HEAD~1
    ds = diff --stat
