    bspc node -d 5 && \
    bspc desktop -f 5 && \
    update_wallpaper
    #popup.sh Desktop
super + ctrl + minus
    bspc node -d 6 && \
    bspc desktop -f 6 && \
    update_wallpaper
    #popup.sh Desktop
super + ctrl + egrave
    bspc node -d 7 && \
    bspc desktop -f 7 && \
    update_wallpaper
    #popup.sh Desktop
super + ctrl + underscore
    bspc node -d 8 && \
    bspc desktop -f 8 && \
