#
# wm independent hotkeys
#

# terminal emulator
super + {Return, alt + Return}
    {gnome-terminal,urxvtc -name scratchpad}
mode_switch + {Return, ctrl + Return}
    {gnome-terminal,urxvtc -name scratchpad}

#mode_switch + ctrl + Return
#    gnome-terminal --title="scratchpad"

# program launcher
super + F2
    rofi.sh drun
shift + F2
    rofi.sh ssh

# make sxhkd reload its configuration files:
super + Escape
    pkill -USR1 -x sxhkd

#
# bspwm hotkeys
#

# quit bspwm normally
super + ctrl + Escape
    bspc quit

# close and kill
super + {_,shift + }w
    bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
    bspc desktop -l next

# if the current node is automatic, send it to the last manual, otherwise pull the last leaf
super + y
    bspc query -N -n focused.automatic && \
	bspc node -n last.!automatic || \
	bspc node last.leaf -n focused

# swap the current node and the biggest node
super + g
    bspc node -s biggest

#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
    bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + s + {x,y,z}
    bspc node -g {locked,sticky,private}

# layer
super + {a,shift + a}
    bspc node -l {below,above}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{Left,Up,Down,Right}
    bspc node -{f,s} {west,north,south,east}

# focus the node for the given path jump
super + {p,b,comma,period}
    bspc node -f @{parent,brother,first,second}

# focus the next/previous node
super + {_,shift + }c
    bspc node -f {next,prev}

# focus the next/previous desktop
#super + ctrl + {Left,Right}
#    bspc desktop -f {prev,next}

# focus the last node/desktop
#alt + {grave,Tab}
#    bspc {desktop,window} -f last

alt + Tab
	bspc node -f next

# focus the older or newer node in the focus history
super + {o,i}
    bspc wm -h off; \
    bspc node {older,newer} -f; \
    bspc wm -h on

# focus or send to the given desktop
super + {_,ctrl + }{1-9,0}
    bspc {desktop -f,node -d} '^{1-9,10}' # && popup.sh Desktop

# focus desktop
{super} + ampersand
    bspc desktop -f 1 && \
    update_wallpaper
    #popup.sh Desktop
{super} + eacute
    bspc desktop -f 2 && \
    update_wallpaper
    #popup.sh Desktop
{super} + quotedbl
    bspc desktop -f 3 && \
    update_wallpaper
    #popup.sh Desktop
{super} + apostrophe
    bspc desktop -f 4 && \
    update_wallpaper
    #popup.sh Desktop
{super} + parenleft
    bspc desktop -f 5 && \
    update_wallpaper
    #popup.sh Desktop
{super} + minus
    bspc desktop -f 6 && \
    update_wallpaper
    #popup.sh Desktop
{super} + egrave
    bspc desktop -f 7 && \
    update_wallpaper
    #popup.sh Desktop
{super} + underscore
    bspc desktop -f 8 && \
    update_wallpaper
    #popup.sh Desktop
{super} + ccedilla
    bspc desktop -f 9 && \
    update_wallpaper
    #popup.sh Desktop
{super} + agrave
    bspc desktop -f 10 && \
    update_wallpaper
    #popup.sh Desktop
# send to given desktop
super + ctrl + ampersand
    bspc node -d 1 && \
    bspc desktop -f 1 && \
    update_wallpaper
    #popup.sh Desktop
super + ctrl + eacute
    bspc node -d 2 && \
    bspc desktop -f 2 && \
    update_wallpaper
    #popup.sh Desktop
